<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Button style -->
    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/myButtonTextColor</item>
        <item name="android:background">@color/myButtonColor</item>
    </style>

    <!-- Eddittext style -->
    <style name="EditTextColor" parent="@android:style/Widget.EditText">
        <item name="android:backgroundTint">@color/myButtonColor</item>
        <item name="android:textColorHint">@color/myHintColor</item>
    </style>

    <!-- Radio style -->
    <style name="RadioColor" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/myHintColor</item>
        <item name="android:textColor">@color/myTxtColor</item>
    </style>

    <!-- My Style -->
    <style name="KimTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/myColorPrimary</item>
        <item name="colorPrimaryDark">@color/myColorDark</item>
        <item name="android:colorBackground">@color/myBackgroundColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/myTxtColor</item>
    </style>

</resources>