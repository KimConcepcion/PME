<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="30dp"
        >

        <RadioButton
            style="@style/RadioColor"
            android:id="@+id/radioMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Mon"
            />
        <RadioButton
            style="@style/RadioColor"
            android:id="@+id/radioTue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Tue"
            />
        <RadioButton
            style="@style/RadioColor"
            android:id="@+id/radioWed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Wed"
            />
        <RadioButton
            style="@style/RadioColor"
            android:id="@+id/radioThu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Thu"
            />
        <RadioButton
            style="@style/RadioColor"
            android:id="@+id/radioFri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Fri"
            />
    </RadioGroup>

    <!-- Layout for buttons: -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            style="@style/ButtonColor"
            android:id="@+id/buttonShowSchedule"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/ShowSchedule"
            android:onClick="scheduleListener"
            android:layout_gravity="center"
            android:layout_marginTop="140dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/myHintColor"
            />

        <Button
            style="@style/ButtonColor"
            android:id="@+id/buttonShowLocation"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/ShowLocation"
            android:onClick="locationListener"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/myHintColor"
            />
        <Button
            style="@style/ButtonColor"
            android:id="@+id/buttonContact"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/ContactAdmin"
            android:onClick="contactListener"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/myHintColor"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Schedule"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_schedule_black_24dp"
            />

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Schedule"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"
            android:drawableStart="@drawable/ic_baseline_my_location_24px"
            />

        <TextView
            android:id="@+id/txtContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Schedule"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="170dp"
            android:drawableStart="@drawable/ic_baseline_contact_mail_24px"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>